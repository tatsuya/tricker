extends layout

block content
  nav.navbar.navbar-inverse.navbar-fixed-top(ng-controller="HeaderCtrl")
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type="button" ng-init="isCollapsed = true" ng-click="isCollapsed = !isCollapsed")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/" ng-click="collapse()") Tricker

      #navbar.navbar-collapse(ng-class="{collapse: isCollapsed}")
        ul.nav.navbar-nav
          li.active
            a(href="/" ng-click="collapse()") ホーム
          li.dropdown(ng-class="{open: dropdownOne}" ng-init="dropdownOne" ng-click="dropdownOne = !dropdownOne")
            a.dropdown-toggle(href="#" dropdown-toggle) 動画一覧
              span.caret
            ul.dropdown-menu(role="menu")
              li
                a(href="/videos?trick=ollie" ng-click="collapse()") オーリー
              li
                a(href="/videos?trick=shifty" ng-click="collapse()") シフティ
              li
                a(href="/videos?trick=backside-triple-cork-1440" ng-click="collapse()") バックサイドトリプルコーク1440
              li.divider
              li.dropdown-header Nav header
              li
                a(href="#" ng-click="collapse()") Separated link
              li
                a(href="#" ng-click="collapse()") One more separated link

  div(ng-view)

  hr

  .container
    footer
      p &copy; @tatsuyaoiw 2015

  script(src='js/lib/angular/angular.min.js')
  script(src='js/lib/angular/angular-route.min.js')
  script(src='js/lib/angular-bootstrap/angular-bootstrap.min.js')
  script(src='js/lib/angular-vimeo-embed/angular-vimeo-embed.min.js')
  script(src="https://www.youtube.com/iframe_api")
  script(src='js/lib/angular-youtube-embed/angular-youtube-embed.min.js')
  script(src='js/app.js')
  script(src='js/controllers.js')